<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%-4relative [%thread] %-5level %logger{35} - %msg %n</pattern>
    </encoder>
  </appender>

  <logger name="uk.co.froot.trezorjava" level="DEBUG">
    <appender-ref ref="STDOUT"/>
  </logger>
</configuration>